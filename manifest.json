{
	"action": {
		"default_icon": "images/video.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"content-script.js"
			]
		}
	],
	"description": "网站视频播放设置快捷键,还可以设置网站白名单.",
	"manifest_version": 3,
	"name": "Video-Shortcut",
	"permissions": [
		"storage",
		"tabs"
	],
	"short_name": "Video-Shortcut",
	"version": "2.0"
}